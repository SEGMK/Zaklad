<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Zaklad.Views.MauiCamera"
             Size="400, 600"
             Color="{StaticResource StandardBackground_Shade_1}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <mct:CameraView Grid.Row="0" Grid.Column="0" x:Name="MyCamera" MediaCaptured="MyCamera_MediaCaptured" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

        </mct:CameraView>
        <Button HorizontalOptions="Center" VerticalOptions="End" Margin="0,0,0,10" CornerRadius="50" BackgroundColor="White" BorderColor="Black" BorderWidth="2" Pressed="Button_Pressed" ZIndex="1" WidthRequest="50" HeightRequest="50"/>
    </Grid>
</mct:Popup>