<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Zaklad.ProductView">
    <Border>
        <HorizontalStackLayout>
            <Image x:Name="imageProductImage" WidthRequest="150" HeightRequest="150" Aspect="AspectFit" Source="no_product.png">

            </Image>
            <VerticalStackLayout>
                <Label x:Name="labelProductName" FontSize="24" TextColor="Gray" Text="product_name"/>
                <Label FontSize="18" TextColor="Gray" Text="wartości odżywcze na 100g:"/>
                <Label x:Name="labelKcal" FontSize="16" TextColor="Gray" Text="Energia: 0 kcal"/>
                <Label x:Name="labelProteins" FontSize="14" TextColor="LightSkyBlue" Text="Białko: 0g"/>
                <Label x:Name="labelFat" FontSize="14" TextColor="Yellow" Text="Tłuszcze: 0g"/>
                <Label x:Name="labelCarbohydrates" FontSize="14" TextColor="White" Text="Cukry: 0g"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
    </Border>
</ContentView>
