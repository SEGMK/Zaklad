<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Zaklad.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Zaklad"
    Title="Zaklad"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarBackgroundColor="#212121"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#303030">
    <FlyoutItem>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Wybierz produkt"
            ContentTemplate="{DataTemplate local:AddItemByName}"
            Route="MainPage"/>
        <ShellContent
            Title="Zeskanuj kod kreskowy"
            ContentTemplate="{DataTemplate local:AddItemByBarcode}"
            Route="MainPage"/>
    </FlyoutItem>
</Shell>
