<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Zaklad.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Zaklad"
    xmlns:views="clr-namespace:Zaklad.Views"
    Title="Zaklad"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarBackgroundColor="{StaticResource StandardBackground_Shade_2}"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarUnselectedColor="#303030">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Settings"
        ContentTemplate="{DataTemplate views:UserDataSettings}"
        Route="UserDataSettings" />
</Shell>